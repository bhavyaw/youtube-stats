{
    "manifest_version": 2,

    "name": "Youtube History Chrome Extension",
    "description": "",
    "version": "1.0.0",

    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "content_scripts": [{
            "matches": ["https://myaccount.google.com/activitycontrols", "https://myaccount.google.com/intro/activitycontrols"],
            "js": ["./js/vendor.js", "./js/activityControlsPage.js"]
        },
        {
            "matches": ["https://myactivity.google.com/item*"],
            "js": ["./js/vendor.js", "./js/youtubeHistoryItemsPage.js"]
        }
    ],

    "background": {
        "scripts": ["js/vendor.js", "js/background.js"],
        "persistent": false
    },

    "web_accessible_resources": [
        "js/variableAccessScriptNew.js"
    ],

    "permissions": [
        "tabs",
        "storage",
        "unlimitedStorage",
        "<all_urls>",
        "notifications",
        "identity",
        "identity.email"
    ]
}