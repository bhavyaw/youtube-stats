{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": ["dom", "es2015"],
        "moduleResolution": "node",
        "noImplicitAny": false,
        "jsx": "react",
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "dist/js",
        "noEmitOnError": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "baseUrl": "./src",
        "paths": {
            "common": ["common/*"],
            "contentScripts": ["contentScripts/*"],
            "background": ["background/*"],
            "models": ["models.ts"],
            "appConstants": ["appConstants.ts"],
            "config": ["appConfig.ts"],
            "globals": ["appGlobals.ts"],
        }
    }
}